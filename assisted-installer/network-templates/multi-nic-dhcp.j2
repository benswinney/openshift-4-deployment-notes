dns-resolver:
  config:
    server:
{% set dns_entries = parse_dns_vars.split(',') %}
{% for dns_entry in dns_entries %}
      - {{ dns_entry }}
{% endfor %}
interfaces:
- name: {{ interface_one_name }}
  ipv4:
    auto-dns: {{ auto_dns }}
    dhcp: true
    enabled: true
  state: up
  type: ethernet
- name: {{ interface_two_name }}
  ipv4:
    auto-dns: {{ auto_dns }}
    dhcp: true
    enabled: true
  state: up
  type: ethernet